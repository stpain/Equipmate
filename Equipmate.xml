<Ui>
    <Frame name="EquipmateUI" mixin="EquipmateMixin" parent="UIParent" inherits="ButtonFrameTemplate" frameStrata="HIGH" enableMouse="true" movable="true">

        <Size x="300" y="530"/>
        <Anchors>
            <Anchor point="CENTER" x="0" y="0"/>
        </Anchors>

        <Frames>

            <Button parentKey="outfitHelptip" inherits="MainHelpPlateButton">
                <Anchors>
                    <Anchor point="TOPLEFT" x="36" y="20"/>
                </Anchors>
                <HighlightTexture file="Interface\common\help-i" alphaMode="ADD" hidden="true">
                    <Size x="46" y="46"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                    <Color r="1" g="1" b="1" a=".2"/>
                </HighlightTexture>
            </Button>

            <Frame parentKey="characterHelptip" inherits="AdventureHelpTipTemplate_NoArrow" hidden="true">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-60" y="-60"/>
                </Anchors>
                <Size x="300" y="230"/>
            </Frame>

            <Button parentKey="selectOutfitDropdown" inherits="TBDDropDownTemplate"  text="New Outfit">
                <Size x="160" y="34"/>
                <Anchors>
                    <Anchor point="TOP" x="5" y="-25"/>
                </Anchors>
            </Button>

            <Button parentKey="outfitConfig">
                <Size x="28" y="28"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.selectOutfitDropdown" relativePoint="RIGHT" x="10" y="0"/>
                </Anchors>
                <NormalTexture file="Interface\WorldMap\Gear_64">
                    <TexCoords left="0" top="0" right="0.5" bottom="0.5"/>
                </NormalTexture>
                <HighlightTexture file="Interface\WorldMap\Gear_64">
                    <TexCoords left="0.5" top="0" right="1" bottom="0.5"/>
                </HighlightTexture>
            </Button>


            <Frame parentKey="equipmentListview" inherits="TBDListviewTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentInset" x="0" y="-2"/>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$parentInset" x="0" y="2"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="frameType" value="FRAME" type="string"/>
                    <KeyValue key="itemTemplate" value="TBDSimpleIconLabelFrame" type="string"/>
                    <KeyValue key="elementHeight" value="22" type="number"/>
                </KeyValues>
            </Frame>

            <Button parentKey="newOutfit" inherits="UIPanelButtonTemplate" text="New">
                <Size x="98" y="22"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="3" y="4"/>
                </Anchors>
            </Button>

            <Button parentKey="deleteOutfit" inherits="UIPanelButtonTemplate" text="Delete">
                <Size x="98" y="22"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.newOutfit" relativePoint="RIGHT" x="0" y="0"/>
                </Anchors>
            </Button>

            <Button parentKey="equipOutfit" inherits="UIPanelButtonTemplate" text="Equip">
                <Size y="22"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.deleteOutfit" relativePoint="RIGHT" x="0" y="0"/>
                    <Anchor point="BOTTOMRIGHT" x="-4" y="4"/>
                </Anchors>
            </Button>
        </Frames>

        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnShow method="OnShow"/>
            <OnEvent method="OnEvent"/>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
    </Frame>
</Ui>